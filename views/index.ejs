<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ESP8266 Data Display</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.0.1/socket.io.min.js"></script>  <!-- Include Socket.io library -->
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            text-align: center;
        }
        .data-container {
            margin-top: 30px;
        }
        .data-item {
            font-size: 20px;
            margin: 10px;
            padding: 10px;
            background-color: #f0f0f0;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <h1>ESP8266 Real-Time Data</h1>

    <div class="data-container">
        <div id="sensorData" class="data-item">Waiting for data...</div>
    </div>

    <script>
        // Connect to WebSocket server
        const socket = io('http://localhost:8000');  // Make sure to change the URL if needed

        // Listen for 'update-data' event from server
        socket.on('update-data', function(data) {
            // Display the received data on the webpage
            document.getElementById('sensorData').textContent = `Sensor Value: ${data.sensor}`;
        });
    </script>
</body>
</html>

